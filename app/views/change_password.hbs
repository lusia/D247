{{#extend "layout"}}
    {{#replace "content"}}
        <div class="row">
            <div class="col-sm-6">
                <section class="panel">
                    <header class="panel-heading bg bg-success text-center"> Change password</header>
                    <div class="panel-body">
                        <form action="/login/change_password" method="post" class="bs-example form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="password">Old password</label>

                                <div class="col-lg-10">
                                    <input type="password" id="name" class="form-control" name="password"
                                           placeholder="Old password" required>
                                </div>
                            </div>
                            {{# if fail}}
                                <ul>
                                    <li class="alert_fail alert alert-danger">{{fail}}</li>
                                </ul>
                            {{/if}}

                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="new_password">New Password</label>

                                <div class="col-lg-10">
                                    <input type="password" class="form-control" id="new_password" name="new_password"
                                           placeholder="New Password" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="confirm_password">Repeat Password</label>

                                <div class="col-lg-10">
                                    <input type="password" class="form-control" id="confirm_password"
                                           name="confirm_password"
                                           placeholder="Confirm Password" required>
                                </div>
                            </div>
                            {{# if not_match}}
                                <ul>
                                    <li class="alert_fail alert alert-danger">{{not_match}}</li>
                                </ul>
                            {{/if}}
                            <div class="form-group">

                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" class="btn btn-sm btn-default">Change</button>
                                </div>

                            </div>

                        </form>
                    </div>
                </section>
            </div>
        </div>
    {{/replace}}
{{/extend}}